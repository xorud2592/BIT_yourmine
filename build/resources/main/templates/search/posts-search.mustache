{{>layout/header}}

<center>
<h1>Searching Results</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-12">
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
            <a href="/" role="button" class="btn btn-primary">글 목록</a>
            <a href="/myPage" role="button" class="btn btn-link">마이 페이지</a>
            {{>search/searchForm}}
        </div>
    </div>

    <br>

    <!-- 게시글 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글 번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종 수정일</th>
        </tr>
        </thead>

        <tbody id="tbody">
        {{#searchList}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/searchList}}
        </tbody>
    </table>
</div>
</center>

{{>layout/footer}}